<%- include("header.ejs"); %>
<header class="hero">
    <h1>Welcome to MyBlog</h1>
    <p>Your daily dose of inspiration and knowledge</p>
</header>


<form action="http://localhost:8080/admin/<%= id %>/edit?_method=patch" method="post"  class="form">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" placeholder="Enter Title" value=" <%= posts[id].title %>">
    <textarea name="Description" id="textarea" cols="30" rows="10" placeholder="Enter Description"> <%= posts[id].Description  %></textarea>
    <button type="submit" id="submit">Submit</button>
</form>
